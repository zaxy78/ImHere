    <!-- Error Validation -->
    <ControlTemplate x:Key="ValidationTemplate">
        <DockPanel>
            <TextBlock
            Foreground="Red"
            FontSize="20"><Run
                Text="!" />
            </TextBlock>
            <AdornedElementPlaceholder />
        </DockPanel>
    </ControlTemplate>
    
    <Style x:Key="TextBoxInErrorStyle"
    TargetType="{x:Type TextBox}">
        <Style.Triggers>
            <Trigger
            Property="Validation.HasError"
            Value="true">
                <Setter
                Property="ToolTip"
                Value="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={x:Static RelativeSource.Self}}" />
                <Setter
                Property="Background"
                Value="Red" />
                <Setter
                Property="Foreground"
                Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <!-- End Error Validation -->
</ResourceDictionary>